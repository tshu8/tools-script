################################################################################
################################################################################
# colors                                                                       #
################################################################################
TEXT_RESET='\e[0m'
TEXT_YELLOW='\e[0;33m'
TEXT_RED_B='\e[1;31m'
################################################################################
# Help                                                                         #
################################################################################
Help()
{
	#display help
	echo "A tools script, for managing various tasks in the system."
	echo
	echo "Syntax: scriptTemplate [-a|d|h|p|u|U]"
	echo "options"
	echo "a   Run autoremove."
	echo "d   Run Dist-upgrade."
	echo "h   Print this Help."
	echo "p   Set permissions of the ~/scripts folder/files."
	echo "u   Run apt update."
	echo "U   Run apt upgrade."
	echo
}

###############################################################################
# Update                                                                      #
###############################################################################
Update()
{
	# Run update
	sudo apt -y update
	echo -e $TEXT_YELLOW
	echo 'APT update finished...'
	echo -e $TEXT_RESET
}

###############################################################################
# Upgrade                                                                     #
###############################################################################
Upgrade()
{
	udo apt -y upgrade
	echo -e $TEXT_YELLOW
	echo 'APT upgrade finished...'
	echo -e $TEXT_RESET
}

###############################################################################
# dist-upgrade                                                                #
###############################################################################
Dist()
{
	sudo apt -y dist-upgrade
	echo -e $TEXT_YELLOW
	echo 'APT distributive upgrade finished...'
	echo -e $TEXT_RESET
}

###############################################################################
# autoremove                                                                  #
###############################################################################
Auto()
{
	sudo apt -y autoremove
	echo -e $TEXT_YELLOW
	echo 'APT auto remove finished...'
	echo -e $TEXT_RESET
}

###############################################################################
# Permissions                                                                 #
###############################################################################
Perm()
{
	sudo chmod 750 -R /home/thomas/scripts

	sudo chown -R thomas:scripts /home/thomas/scripts
}
###############################################################################
###############################################################################
# Main program                                                                #
###############################################################################
###############################################################################
###############################################################################
# Process the input options. Add options as needed.                           #
###############################################################################
# Get the options                                                             #
while getopts ":a|d|h|u|U" option; do
	case $option in
		a) # run autoremove
			Auto
			exit;;
		d) # run dist-upgrade
			Dist
			exit;;
		h) # display Help
			Help
			exit;;
		p) # set permissions of the script folder/files
			Perm
			exit;;
		u) # run apt update
			Update
			exit;;
		U) # run apt upgrade
			Upgrade
			exit;;

		\?) # incorrect option
			echo "Error: Invalid option"
			exit;;
		esac
	done
echo "Please see the Help section to find out what options are available."
